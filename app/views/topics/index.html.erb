<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
          <% if user_is_moderator? || user_is_authorized_for_topics?  %>
            <%= link_to "Edit Topic", edit_topic_path(topic), class: 'btn btn-sucess' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- check if there is a signed-in current_user & if its admin -->
  <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
