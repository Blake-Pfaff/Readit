<h4>Add a comment</h4>
<!-- make form for a post & comment, shallowly nested under posts -->
<%= form_for [post, comment] do |f| %>
  <div class="form-group">
<!-- make label w/ class of sr-only Adds hidden label for users & screen readers -->
    <%= f.label :body, class: 'sr-only' %>
    <%= f.text_field :body, class: 'form-control', placeholder: "Enter a new comment" %>
  </div>
  <%= f.submit "Submit Comment", class: 'btn btn-default pull-right' %>
<% end %>
