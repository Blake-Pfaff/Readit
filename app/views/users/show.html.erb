<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
<!-- call avatar_url to fetch users avatat -->
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
<!-- use rails image_tag to create an img -->
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
      <div>
        <% unless does_user_have_posts? %>
          <h2><%= @user.name %> has not submitted any posts yet</h2>
        <% end %>
      </div>
      <div>
        <% unless does_user_have_comments? %>
          <h2><%= @user.name %> has not submitted any comments yet</h2>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- display all of users posts & comments using partials -->
<h2>Posts</h2>
<%= render @posts %>

<h2>Comments</h2>
<%= render @user.comments %>

<h2>Favorite posts</h2>
<%= render @favorited_posts%>
